#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;

float serie(int n, float x);

int main(){
int n,x,resultado;

cout<<"igrese n";
cin>>n;
cout<<"ingrese x";
cin>>x;
resultado=serie(n,x);

cout<<"el resultado de la serie es: "<<resultado;
getch();
}

float serie(int n, float x){
int i, I, factorial;
float s, p;
s=(3.1416/5);
for (i=2; i<=n; i=i+2){
			factorial=1;
			for(I=1; I<=i; I++){
			factorial=factorial*i;
			}
p=pow(x,i)/factorial;
p=p*(-1);
s=s+p;

}

return s;




}
